<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Atribuir Cracha"
             x:Class="AppEpi.Views.AtribuicaoCracha">
    <ContentPage.Content>
        <ScrollView x:Name="scrolly">
            <StackLayout Margin="10,10"  x:Name="formLayout"  Spacing="10">
                <StackLayout>
                    <Label >Matricula</Label>
                    <Entry   x:Name="entMatricula"  />
                </StackLayout>
                <StackLayout Margin="0,50,0,0">
                    <Label>Cracha</Label>
                    <Entry   x:Name="entCracha"  />
                </StackLayout>
                <Button Text="Atribuir" x:Name="btnAtribuir" Clicked="btnAtribuir_Clicked" FontSize="18" Style="{StaticResource BotaoAzul1}" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>