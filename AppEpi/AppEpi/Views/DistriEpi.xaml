<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:appepi="clr-namespace:AppEpi"
             Title="Distribuição de EPI"
             x:Class="AppEpi.Views.DistriEpi">
    <ContentPage.Content>
        <ScrollView x:Name="scrolly">
            <StackLayout Margin="10,10"  x:Name="formLayout"  Spacing="10">
                <StackLayout>
                    <Label>Cracha/EPI</Label>
                    <appepi:EpcListView x:Name="epcList"/>
                </StackLayout>
                <Button Text="Confirmar" x:Name="btnConfirmar" Clicked="btnConfirmar_Clicked" FontSize="18" Style="{StaticResource BotaoAzul1}" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>