<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Registrar Senha"
             x:Class="AppEpi.Views.RegistroSenha">
    <ContentPage.Content>
        <ScrollView x:Name="scrolly">
            <StackLayout Margin="10,10"  x:Name="formLayout"  Spacing="10">
                <StackLayout Padding="5,10" HeightRequest="200">
                    <Label >Matricula</Label>
                    <Entry x:Name="entMatricula"   />
                </StackLayout>
                <Button Text="Registra Senha" FontSize="18" Clicked="Button_Clicked" Style="{StaticResource BotaoAzul1}" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>