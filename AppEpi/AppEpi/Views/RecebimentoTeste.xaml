<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:appepi="clr-namespace:AppEpi.ViewModels"
             Title="Recebimento de Itens Testado"
             x:Class="AppEpi.Views.RecebimentoTeste">
    <ContentPage.Content>
        <ScrollView x:Name="scrolly">
            <StackLayout Margin="10,10"  x:Name="formLayout"  Spacing="10">
                <StackLayout Padding="5,10" HeightRequest="150">
                    <Label>EPIs</Label>
                    <appepi:EpcListView x:Name="epcList"/>
                </StackLayout>
                <StackLayout Margin="0,50,0,0">
                    <Label>Data Proximo Teste</Label>
                    <DatePicker x:Name="dtProximtoTeste"
                       MaximumDate="01/01/2100"
                       Format="dd/MM/yyyy"
                       DateSelected="DatePicker_DateSelected"
                        ></DatePicker>
                </StackLayout>
                <StackLayout Margin="0,50,0,0">
                    <Label>ART</Label>
                    <Entry x:Name="entART"/>
                </StackLayout>
                <Button Text="Confirmar" FontSize="18" x:Name="btnEnvioTeste" Clicked="btnEnvioTeste_Clicked" Style="{StaticResource BotaoAzul1}"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>