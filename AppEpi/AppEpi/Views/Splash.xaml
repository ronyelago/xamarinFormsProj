<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="#1976D2"
             x:Class="AppEpi.Views.Splash">
    <ContentPage.Content>
        <StackLayout Spacing="10" Padding="10">
            <Label x:Name="lblEmpresa" Margin="0,90,0,0" TextColor="White" FontAttributes="Bold" FontSize="38" HorizontalOptions="Center"></Label>
            <Label Text="Bem Vindo," FontSize="28" Margin="0,30,0,0" TextColor="White"   HorizontalOptions="Center"></Label>
            <Label x:Name="lblNome" FontSize="32" FontAttributes="Bold" Margin="0,10,0,0" TextColor="White"   HorizontalOptions="Center"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>